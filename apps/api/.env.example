# Environment variables template
# Copy this file to .env and fill in the values

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database (required)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ikki_erp

# Auth (required)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long
JWT_EXPIRES_IN=7d

# Observability (optional)
AXIOM_TOKEN=
AXIOM_DATASET=ikki

# App
APP_NAME=ikki-erp
LOG_LEVEL=info
